<div class="container mb-3 mt-3">
<div class="row justify-content-center">
<div class="col-9 mt-4">
<div class="card text-center shadow mb-5 bg-white">
<h2 class="text-center mb-3 mt-3", style="color:red;">List of all users</h2>
<center>
  <table>
    <th>User Id</th>
    <th>User name</th>
		<th colspan="3">Action</th>
		<% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
			  <td><%= user.first_name %></td>
			  <td><%= button_to "Show",user_path(user.id),method: :get, class: "btn btn-outline-primary"%>
	  	  <td><%= button_to "Edit",edit_user_path(user.id),method: :get, class: "btn btn-outline-success" %></td>
        <td><%= button_to "Delete",user_path(user.id),method: :delete, class: "btn btn-outline-danger" %></td>
	  	</tr>
    <% end %>
  </table>
</center>

<center>
  <div class="mb-3 mt-3"> 
   <b> <%= link_to "Add new product",new_user_path %></b>
  </div>
</center>
